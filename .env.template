# PULSAR SENTINEL Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Polygon RPC Endpoints (use Alchemy, Infura, or public endpoints)
POLYGON_MAINNET_RPC=https://polygon-rpc.com
POLYGON_TESTNET_RPC=https://rpc-amoy.polygon.technology

# Active Network (mainnet or testnet)
POLYGON_NETWORK=testnet

# Smart Contract Address (deployed governance contract)
GOVERNANCE_CONTRACT_ADDRESS=

# Private Key for Server Operations (KEEP SECRET!)
# Only used for server-side signing, NOT user operations
SERVER_WALLET_PRIVATE_KEY=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# ML-KEM Security Level (768 or 1024)
PQC_SECURITY_LEVEL=768

# Key Rotation Interval (days)
KEY_ROTATION_DAYS=90

# AES Key Size (256)
AES_KEY_SIZE=256

# HMAC Algorithm
HMAC_ALGORITHM=SHA256

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Rate Limiting (requests per minute per user)
RATE_LIMIT_DEFAULT=5
RATE_LIMIT_SENTINEL=10
RATE_LIMIT_LEGACY=5
RATE_LIMIT_GUILD=100

# JWT Settings
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# ASR (Agent State Record) CONFIGURATION
# =============================================================================

# ASR Storage Path (local)
ASR_STORAGE_PATH=./data/asr

# ASR Logging Level (1-5)
ASR_MIN_LOG_LEVEL=1

# Blockchain Logging (true/false)
ASR_BLOCKCHAIN_ENABLED=true

# =============================================================================
# GOVERNANCE CONFIGURATION
# =============================================================================

# Three-Strike Policy
STRIKE_THRESHOLD=3
STRIKE_BAN_DURATION_HOURS=24

# Unresponsive Heir Transfer (days)
HEIR_TRANSFER_DAYS=90

# PTS Thresholds
PTS_TIER1_MAX=50
PTS_TIER2_MAX=150

# =============================================================================
# TIER CONFIGURATION
# =============================================================================

# Operations Limits per Month
TIER_SENTINEL_OPS=10000000
TIER_LEGACY_OPS=5000000
TIER_GUILD_OPS=-1

# Pricing (USD/month)
TIER_SENTINEL_PRICE=16.99
TIER_LEGACY_PRICE=10.99
TIER_GUILD_PRICE=29.99

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================

# Discord Bot Token (from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=

# Discord Webhook URL (Channel Settings > Integrations > Webhooks)
DISCORD_WEBHOOK_URL=

# Channel IDs (right-click channel > Copy Channel ID, requires Developer Mode)
DISCORD_GENERAL_CHANNEL_ID=
DISCORD_ALERTS_CHANNEL_ID=

# Discord Server Invite Link
DISCORD_INVITE_URL=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format (json or text)
LOG_FORMAT=json

# Log File Path
LOG_FILE_PATH=./logs/pulsar_sentinel.log
